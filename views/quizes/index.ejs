  <table>
  <% var i; for (i=0; i < quizes.length; i++) { %>
  	<tr>
		<td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
		<td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
		<td><form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
				<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar</button>
			</form>
		</td>
	</tr>
  <% } %>
  <% if (i===0) { %>
  	<tr><td><p>No se ha encontrado la cadena buscada</p></td></tr>
  <% } %>  
  <tr><td>
    <form action="/quizes/search" method="get" >
	    <input type="text" name="search" placeholder="Buscar texto" id="query" title="Buscador" />
	    <input type="submit" value="Buscar" title="Buscar" alt="Boton de Busqueda" />
	</form>  
  </td></tr>
  <tr><td><a href="/quizes/new"><button type="button">Crear pregunta</button></a></td></tr>
  </table>

